{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <h1>
        <span id="id" data-id="{{ produit.id }}"></span>{{ produit.name }}
        <small class="badge badge-info">
            {{ produit.price }}€
        </small>
    </h1>
    <h2>{{ produit.categories.name }}</h2>
    <div class="row">
        <div class="col">
            <img src="/img/{{ produit.imageName }}" class="card-img-top"
                 alt="Image de {{ produit.name }}">
        </div>
        <div class="col">
            <a href="{{ path('produit_edit', {'slug': produit.slug}) }}">Editer</a>
            <p>{{ produit.description | nl2br }}</p>
        </div>
    </div>
    <div class="col-sm-6">
        <p>
            Publié le {{ produit.creationDate | date('d/m/Y') }}, vu {{ produit.nbViews }} fois
        </p>
        <a href="{{ path('produit_index') }}"><button type="submit" class="btn-primary btn">Retour à la liste</button></a>
        {{ include('produit/_delete_form.html.twig') }}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/ajax.js') }}"></script>
{% endblock %}




